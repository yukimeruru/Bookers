<h1>Books</h1>

  <table>
    <table-header>
      <table-header-item>Title</table-header-item>
      <table-header-item>Body</table-header-item>
      <table-header-item></table-header-item>
    </table-header>
    <% @books.each do |book| %>
    <table-main>
      <table-main-item><%= book.title %></table-main-item>
      <table-main-item><%= book.body %></table-main-item>
      <table-main-item>
        <%= link_to "Show", book_path(book) %>
        <%= link_to "Edit", edit_book_path(book) %>
        <%= link_to "Destroy", book_path(book),method: :delete %>
      </table-main-item>
    </table-main>
    <% end %>
  </table>


<h2>New book</h2>
<%= form_with model:@book, local:true do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Body</h4>
  <%= f.text_field :body %>
  <%= f.submit 'Create Book' %>
<% end %>