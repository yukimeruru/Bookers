<% if @book.errors.any? %>
  <%= @book.errors.count %>件のエラーが発生しました
  <% @book.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>

<h1>Editing Book</h1>
<%= form_with model:@book,local:true do |f| %>
  <div class="field">
    <h4>Title</h4>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <h4>Body</h4>
    <%= f.text_field :body %>
  </div>
  <div class="field"><%= f.submit 'Update Book' %></div>
<% end %>
<%= link_to "Show",book_path(@book) %>
|
<%= link_to "Back",books_path %>
